{{!-- Aca tengo que crear un vista de todos los productos en tiempo real y un formulario
    para poder agregar productos desde la página --}}
<div>
    Lista de productos
</div>
<section>
    <div class="container">
  <h1>Agregar Producto</h1>
  <form>
    <label for="title">Título:</label>
    <input type="text" id="title" name="title" required>
  
    <label for="description">Descripción:</label>
    <textarea id="description" name="description" required></textarea>
  
    <label for="code">Código:</label>
    <input type="text" id="code" name="code" required>
  
    <label for="price">Precio:</label>
    <input type="number" id="price" name="price" required>
  
    <label for="stock">Stock:</label>
    <input type="number" id="stock" name="stock" required>
  
    <label for="category">Categoría:</label>
    <select id="category" name="category" required>
      <option value="">Seleccionar categoría</option>
      <option value="Tecnología">Tecnología</option>
      <option value="Telecomunicaciones">Telecomunicaciones</option>
      <option value="Electrónica">Electrónica</option>
      <!-- Agrega más opciones de categorías según tus necesidades -->
    </select>
  
    <label for="thumbnail">Adjuntar Miniatura:</label>
    <input type="file" id="thumbnail" name="thumbnail" accept="image/*" required>
  
    <button type="submit">Agregar Producto</button>
  </form>
    </div>
</section>
<script src="/socket.io/socket.io.js"></script> {{!-- Instanciamos un socket --}}
